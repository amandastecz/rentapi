    "paths": {
        "/sessions":{
            "post":{
                "tags": ["Authentication"],
                "summary": "Login with credentials",
                "description": "Login with credentials",
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema":{ 
                                "type": "object",
                                "properties": {
                                    "password": {
                                        "type": "string"
                                    },
                                    "email":{
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "password": "123456",
                                    "email": "admin@rentapi.com.br"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description":  "Email or password incorrect!"
                    }
                }
            }
        },
        "/refresh-token":{

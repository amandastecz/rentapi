        "/rentals/":{
            "post":{
                "tags": ["Rental"],
                "summary": "Create a rental when a car is available",
                "description": "Create a rental when a car is available",
                "requestBody": {
                    "content": {
                        "application/json":{
                            "schema":{
                                "type": "object",
                                "properties":{
